{
  "name": "totem",
  "version": "1.0.0",
  "description": "Contract Testing for Distributed Systems",
  "main": "ClientApp/app.js",
  "scripts": {
    "runtestps": "@powershell start 'dotnet' -argumentlist 'run -p ../Totem/Totem.csproj --launch-profile \"Testing\"'",
    "killapp": "@powershell taskkill /f /im dotnet.exe",
    "runtest": "webpack && npm run --silent runtestps",
    "e2etest": "testcafe 'chrome:headless' ./ClientApp/features/contracts/__tests__/e2e/*.e2e.js",
    "wait": "wait-on tcp:4000",
    "e2eparallel": "npm-run-all --parallel \"runtest\" --serial \"wait\" \"e2etest\"",
    "e2e": "npm run e2eparallel && npm run killapp",
    "test": "jest && npm run e2e",
    "lint": "eslint --ext .js,.vue ClientApp"
  },
  "jest": {
    "setupFiles": [
      "./ClientApp/testConfig/setup.js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "vue-jest",
      "^.+\\.js$": "./node_modules/babel-jest"
    },
    "testPathIgnorePatterns": [
      "./ClientApp/features/contracts/__tests__/stubs",
      "./ClientApp/features/contracts/__tests__/e2e"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "jquery": "3.4.0",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "validator": "^11.1.0",
    "vue": "2.6.10",
    "vue-multiselect": "^2.1.6"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.5.5",
    "@fortawesome/fontawesome-free": "^5.9.0",
    "@vue/babel-preset-jsx": "^1.0.0",
    "@vue/test-utils": "^1.0.0-beta.29",
    "aspnet-webpack": "3.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.8.0",
    "babel-loader": "8.0.5",
    "css-loader": "2.1.1",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-vue": "5.2.2",
    "extract-text-webpack-plugin": "3.0.2",
    "husky": "^3.0.7",
    "jest": "24.7.1",
    "npm-run-all": "^4.1.5",
    "popper.js": "^1.15.0",
    "prettier": "^1.18.2",
    "sass": "1.19.0",
    "sass-loader": "7.1.0",
    "sinon": "^7.4.1",
    "testcafe": "^1.4.1",
    "testcafe-vue-selectors": "^3.1.0",
    "vue-jest": "^3.0.4",
    "vue-loader": "15.7.0",
    "vue-router": "3.0.6",
    "vue-style-loader": "4.1.2",
    "vue-template-compiler": "2.6.10",
    "wait-on": "^3.3.0",
    "webpack": "4.30.0",
    "webpack-cli": "3.3.1",
    "webpack-dev-server": "3.3.1",
    "webpack-hot-middleware": "2.24.3"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/headspringlabs/totem/src/master/"
  },
  "author": "Headspring",
  "license": "MIT"
}
